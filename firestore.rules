rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return request.auth != null && request.auth.uid == uid;
    }
    
    // Users collection
    match /users/{uid} {
      allow read: if isSignedIn();
      allow write: if isOwner(uid);
      
      // User's hosted events
      match /hostedEvents/{eventId} {
        allow read: if isOwner(uid);
        allow write: if isOwner(uid);
      }
      
      // User's event accounts
      match /eventPremoneyAccounts/{eventId} {
        allow read, write: if isOwner(uid);
      }

      match /users/{userId}/{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // ðŸ”¹ User-level notifications
      // Allows each user to read their own notifications, but not write them
      // âœ… User notifications
      match /notifications/{notifId} {
        allow read, write, update: if request.auth != null && request.auth.uid == uid;
      }

    }
    
    // Events collection
    match /events/{eventId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
      
      // Startups under event
      match /startups/{startupId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
        
        // Ratings for startups
        match /ratings/{userId} {
          allow read: if isSignedIn();
          allow write: if isOwner(userId);
        }
      }
      
      // Investments under event
      match /investments/{investmentId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }
      
      // Event-level ratings
      match /ratings/{ratingId} {
        allow read: if isSignedIn();
        allow write: if isSignedIn();
      }
    }

    // ðŸ”¹ Root-level notifications (system logs only)
    // Clients cannot read or write directly to this collection
    match /notifications/{notifId} {
      allow read, write: if false;
    }
  }
}
